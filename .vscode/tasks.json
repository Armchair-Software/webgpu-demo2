{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "./build.sh",
			"group": "build",
			"presentation": {
			  "reveal": "always",
			  "panel": "new"
			}
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "./run.sh",
			"group": "run",
			"presentation": {
			  "reveal": "always",
			  "panel": "new"
			}
		},
		{
			"label": "Build & run",
			"type": "shell",
			"command": "./build.sh && ./run.sh",
			"group": "run",
			"presentation": {
			  "reveal": "always",
			  "panel": "new"
			}
		},
		{
			"label": "Build (release)",
			"type": "shell",
			"command": "CMAKE_BUILD_TYPE=Release ./build.sh",
			"group": "build",
			"presentation": {
			  "reveal": "always",
			  "panel": "new"
			}
		},
		{
			"label": "Run (release)",
			"type": "shell",
			"command": "CMAKE_BUILD_TYPE=Release ./run.sh",
			"group": "run",
			"presentation": {
			  "reveal": "always",
			  "panel": "new"
			}
		},
	]
}
